{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "ES6",
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "@root/*": ["./*"],
      "@/*": ["./src/*"],
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*", "core/**/*"]
}
